void main(){
	println("Enter a number (0 to quit)");
	int numEntered = toInt(input());
	while(numEntered != 0){
		println(toStr(factorial(numEntered)));
		println("Enter a number (0 to quit)");
		numEntered = toInt(input());
	}
}
int factorial(int n){
	int result = 1;
	for(int i = 2; i <= n; i += 1){
		result *= i;
	}
	return result;
}
void main(){
	println("Enter a word");
	String word = input();
	if (isPalindrome(word))
	{
		println(word + " is a palindrome.");
	} else
	{
		println(word + " is not a palindrome.");
	}
}

bool isPalindrome(String s){
	for(int i = 0; i < length(s) / 2; i += 1)
	{
		if (s[i] != s[length(s) - 1 - i])
		{
			return false;
		}
	}
	return true;
}